
.jumbotron
	.container
		.row
			.col-xs-12
				%h1
					Free Shipping on All Orders
				%p
					No minimum purchase required. Continental US only.
				%a.btn.btn-lg.btn-success{ href: 'faq' }
					Learn More

%section.clearfix.productsContent{ style: 'padding-top:50px;' }
	.container
		.row
			- @products.each do |product|
				= render 'card', product: product, args: {}








-##content.content.section.row
	.col-md-12.bg-base
		.ribbon.ribbon-highlight
			%ol.breadcrumb.ribbon-inner
				%li
					%a{ href: '/' }
						Home
				%li.active
					Store

		.row
			.col-md-2.col-lg-2.col-xl-1
				%h4{ style: 'border-bottom: 1px #ddd solid;margin-bottom: 0.25em;'}
					Shop
				.col-md-12.col-sm-2.col-xs-3= link_to 'Everything', products_path
				- ProductCategory.order( name: :asc ).each do |cat|
					.col-md-12.col-sm-2.col-xs-3= link_to cat.name, products_path( category: cat.slug )
				.col-md-12.col-sm-2.col-xs-3
					= link_to 'Men', products_path( tag: 'men' )
				.col-md-12.col-sm-2.col-xs-3
					= link_to 'Women', products_path( tag: 'women' )

				.clearfix

			.col-md-10.col-lg-10.col-xl-11{ style: 'border-left:1px #ddd solid; '}
				-#.row
					.col-md-8.col-md-offset-2{ style: 'margin-bottom:1em;' }
						= form_tag '', method: :get, class: 'form-inline' do
							= hidden_field_tag :category, params[:category]
							.input-group
								= text_field_tag :query, params[:query], placeholder: 'What are you looking for?', class: 'form-control mb-2 mr-sm-2 mb-sm-0'
								.input-group-btn
									= submit_tag 'Search', class: 'btn btn-primary'
				-#.entries
					-#%h2.page-header
						= pluralize @products.total_count, 'Product'
						= @title_mod

				.row
					.col-md-10.col-md-offset-1{ style: 'border: 1px #aaa solid;padding: 0.5em 0 0 0;margin-bottom:1em;margin-top:-0.5em;background-color:#393;color:#fff;'}
						%center
							%p{ style: 'font-size: 150%;' }
								Free Shipping on All Orders
							%p
								No minimum. Continental US only.



				- if params[:query].present?
					%div
						Showing results for "#{params[:query].truncate(100)}"

				= raw paginate @products

				.row.grid
					- @products.each do |product|
						= render 'card', product: product, args: {}
