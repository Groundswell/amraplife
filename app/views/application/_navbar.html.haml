#header.header-navbar{ role: :navigation }
	.header-navbar-inner.container
		#brand.navbar-brand
			%a{ href: '/' }
				= image_tag 'amrap_logo_wht.png', width: 244, height: 56, style: 'border-left: 5px solid #9c27b0;border-right: 5px solid #9c27b0;'
		%ul.nav.nav-pages.hidden-xs
			%li
				%a{ href: '/about' }
					About
			%li
				%a{ href: '/contacts/new' }
					Contact
		%ul.nav.nav-icons
			%li
				%a.btn-icon
					%span.search-toggled-out-icon
						%i.fa.fa-search
		%ul.nav.navbar-nav
			- if SwellMedia::Article.published.count >= 6
				%li
					%a{ href: '/blog' }
						Articles
			- if Recipe.published.count >= 6
				%li
					%a{ href: '/recipes' }
						Food
			-#%li
				%a{ href: '#' }
					Places
			- if Workout.published.count >= 6
				%a{ href: '/workouts' }
					Workouts
			-#%li
				%a{ href: '#' }
					Trainers
			-#%li
				%a{ href: '#' }
					Store
			-#%li
				%a{ href: '#', data: { toggle: :li } }
					Categories
				.subnav-wrapper
					%ul.subnav
						- SwellMedia::Category.all.each do |cat|
							%li
								= link_to cat, articles_path( cat: cat )
