
.main-box.clearfix
	.main-box-header.clearfix
		%h2
			Workouts
	.main-box-body.clearfix
		%table.table.table-striped
			%thead
				%tr
					%th
						Title
					%th
						Type
					%th
						Description
					%th
						Status
					%th
						%a.btn.btn-success.pull-right{ data: { toggle: :modal, target: '#new_workout' } }
							%i.fa.fa-plus-square
							New
			%tbody
				- @workouts.each do |workout|
					%tr
						%td 
							= link_to workout.title, edit_workout_admin_path( workout )
						%td 
							= workout.workout_type 
						%td 
							= workout.description
						%td
							- if workout.published?
								.badge{ class: workout.status }
									Live
							- elsif workout.draft?
								.badge{ class: workout.status }
									Draft
							- elsif workout.active?
								.badge{ class: 'pending' }
									Pending
							- else
								.badge{ class: workout.status }
									= workout.status



= render 'new_modal'