
#content.content.section.row
	.col-md-8.bg-base.col-lg-8.col-xl-9
		.ribbon.ribbon-highlight
			%ol.breadcrumb.ribbon-inner
				%li
					%a{ href: '/' }
						Home
				%li.active
					Browse

		%header.page-header
			%h1.page-title
				- if @search_term.present?
					%span Showing Results for
					"#{@search_term}"
				- else
					- if @category.present?
						%span Browsing Category
					- else
						%span Browsing
					= @title
			%p=@subtitle

		.entries
			- @results.each do |result|
				= render 'swell_media/articles/row', article: result

	
	.sidebar.col-md-4.col-lg-4.col-xl-3
		= render 'swell_media/articles/sidebar'

