= form_for( @movement ) do |f|
	.field
		= f.label :title
		= f.text_field :title, class: 'form-control'

	.field
		= f.label :aliases_csv
		= f.text_field :aliases_csv, class: 'form-control'

	.field
		= f.label :description
		= f.text_area :description, class: 'form-control'

	.actions
		= f.submit 'Update', class: 'btn btn-primary'

