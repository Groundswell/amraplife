				.sidebar-logo
					.logo
						%a{ href: '/admin', style: 'font-size: 90%;' }
							= SwellMedia.app_name
							Admin
				.side-user{ style: 'padding: 0 20px;' }

				%ul.cl-vnavigation
					%li.parent
						%a{ href: '#' }
							Assets
						%ul.sub-menu
							%li
								%a{ href: swell_media.asset_admin_index_path }
									%i.fa.fa-gear
									Admin
							%li
								%a{ data: { toggle: :modal, target: '#new_asset' } }
									%i.fa.fa-plus
									New
							%li.separator
							- SwellMedia::Asset.order( created_at: :desc ).limit( 10 ).each do |asset|
